{
	"compilerOptions": {
		"allowJs": true,
		"allowUnreachableCode": true,
		"allowUnusedLabels": true,
		"baseUrl": "./",
		"checkJs": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": ["es2023"],
		"module": "NodeNext",
		"noEmitOnError": false,  // Allow emitting even when errors occur
		"noErrorTruncation": true,
		"noImplicitOverride": false,  // Allow implicit overrides
		"noUncheckedIndexedAccess": false,  // Turn off indexed access checking
		"noUnusedLocals": false,  // Ignore unused local variable errors
		"noUnusedParameters": false,  // Ignore unused parameter errors
		"outDir": "dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": false,  // Disable strict mode to allow more lenient checks
		"skipLibCheck": true,  // Skip type checking of declaration files
		"target": "es2022",
		"paths": {
			"*": ["./common/typedefs/*.d.ts", "./node_modules/@types/*", "./node_modules/*"]
		},
		"types": ["node"],
		"verbatimModuleSyntax": true
	},
	"exclude": ["./node_modules", "./.git", "./dist"],
	"typeAcquisition": { "enable": true },
	"include": ["./**/*", "./.*"]
}
